---
import { getCollection } from 'astro:content';
import HomePagination from '@components/HomePagination.astro';
import Base from '@layouts/Base.astro';
import Hero from '@components/widgets/Hero.astro'
import Posts from '@layouts/Posts.astro';

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Base>
    <Hero
    tagline=""
    title="Welcome to Kusadasi"
    subtitle="Kusadasi boasts breathtaking coastal beauty, golden beaches, and a lively atmosphere. Steeped in history, it serves as a gateway to ancient wonders like the magnificent city of Ephesus, a significant historical site nearby."
/>
  <Posts posts={posts} />
  <HomePagination />
</Base>
